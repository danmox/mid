<launch>

  <!-- gazebo args -->
  <arg name="world_name"  default="$(find scarab_gazebo)/worlds/perch.world"/>
  <arg name="verbose"     default="false"/>
  <arg name="debug"       default="false"/>
  <arg name="gazebo_gui"  default="false"/>

  <arg name="rviz"         default="true"/>

  <arg name="max_range"    default="30.0"/>

  <rosparam param="/task_agent_ids">[41, 42]</rosparam>
  <rosparam param="/mid_agent_ids">[40]</rosparam>
  <param name="/max_range" value="$(arg max_range)"/>

  <!-- SIMULATION -->

  <!-- start gazebo -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name"   value="$(arg world_name)"/>
    <arg name="gui"          value="$(arg gazebo_gui)"/>
    <arg name="debug"        value="$(arg debug)"/>
    <arg name="verbose"      value="$(arg verbose)"/>
    <arg name="paused"       value="false"/>
    <arg name="use_sim_time" value="true"/>
  </include>

  <!-- start rviz -->
  <node name="rviz" pkg="rviz" type="rviz" if="$(arg rviz)"
        args="-d $(find perch_experiment)/rviz/perch_experiment_sim.rviz"/>

  <!-- load perch world -->
  <node name="perch_spawn" pkg="gazebo_ros" type="spawn_model" output="screen"
        args="-sdf -model perch -file $(find scarab_gazebo)/models/perch/model.sdf"/>

  <!-- SWRI console
  <node pkg="swri_console" name="swri_console" type="swri_console"/> -->

  <!-- fake comms -->
  <node pkg="or_protocol" name="sim_routing" type="sim_routing_node" output="screen"/>

  <!-- ROBOTS -->

  <include file="$(find perch_experiment)/launch/scarab_sim.launch">
    <arg name="id"      value="40"/>
    <arg name="spawn_x" value="4.0"/>
    <arg name="spawn_y" value="3.0"/>
    <arg name="type"    value="mid"/>
    <arg name="gdb"     value="false"/>
  </include>

  <include file="$(find perch_experiment)/launch/scarab_sim.launch">
    <arg name="id"      value="41"/>
    <arg name="spawn_x" value="10.0"/>
    <arg name="type"    value="none"/>
    <arg name="gdb"     value="false"/>
  </include>

  <include file="$(find perch_experiment)/launch/scarab_sim.launch">
    <arg name="id"      value="42"/>
    <arg name="spawn_x" value="-10.0"/>
    <arg name="type"    value="none"/>
    <arg name="gdb"     value="false"/>
  </include>

  <!--
  <include file="$(find perch_experiment)/launch/scarab_sim.launch">
    <arg name="id"      value="43"/>
    <arg name="spawn_x" value="-15.0"/>
    <arg name="spawn_y" value="2.0"/>
    <arg name="type"    value="none"/>
  </include>

  <include file="$(find perch_experiment)/launch/scarab_sim.launch">
    <arg name="id"      value="44"/>
    <arg name="spawn_x" value="15.0"/>
    <arg name="spawn_y" value="-2.0"/>
    <arg name="type"    value="none"/>
  </include>

  <include file="$(find perch_experiment)/launch/scarab_sim.launch">
    <arg name="id"      value="45"/>
    <arg name="spawn_x" value="3.0"/>
    <arg name="spawn_y" value="-4.0"/>
    <arg name="type"    value="none"/>
  </include>
  -->

</launch>
