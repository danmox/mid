<?xml version="1.0" encoding="ISO-8859-15"?>
<launch>

  <!-- gazebo args -->
  <arg name="world_name"  default="$(find perch_experiment)/worlds/perch.world"/>
  <arg name="verbose"     default="false"/>
  <arg name="debug"       default="false"/>
  <arg name="gazebo_gui"  default="true"/>

  <!-- start gazebo -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name"   value="$(arg world_name)"/>
    <arg name="gui"          value="$(arg gazebo_gui)"/>
    <arg name="debug"        value="$(arg debug)"/>
    <arg name="verbose"      value="$(arg verbose)"/>
    <arg name="paused"       value="false"/>
    <arg name="use_sim_time" value="true"/>
  </include>

    <!-- TODO: Need to create custom rviz   <node name="rviz" pkg="rviz" type="rviz"
        args="-d $(find scarab)/rviz/$(arg agent)_sim.rviz"/> -->
      
  <!-- load perch world -->
  <node name="perch_spawn" pkg="gazebo_ros" type="spawn_model" output="screen"
        args="-sdf -model perch -file $(find perch_experiment)/models/perch/model.sdf"/>

  <include file="$(find perch_experiment)/launch/individual_scarab.launch">
    <arg name="agent"        value="scarab40"/>
    <arg name="rviz"         value="true"/>
    <arg name="ground_truth" value="true"/>
    <arg name="x_pos"        value="5"/>
    <arg name="y_pos"        value="5"/>
  </include>

  <include file="$(find perch_experiment)/launch/individual_scarab.launch">
    <arg name="agent"        value="scarab41"/>
    <arg name="rviz"         value="false"/>
    <arg name="ground_truth" value="true"/>
    <arg name="x_pos"        value="-5"/>
    <arg name="y_pos"        value="-5"/>
  </include>

  <include file="$(find perch_experiment)/launch/individual_scarab.launch">
    <arg name="agent"        value="scarab42"/>
    <arg name="rviz"         value="false"/>
    <arg name="ground_truth" value="true"/>
    <arg name="x_pos"        value="5"/>
    <arg name="y_pos"        value="-5"/>
  </include>

  <include file="$(find perch_experiment)/launch/individual_scarab.launch">
    <arg name="agent"        value="scarab43"/>
    <arg name="rviz"         value="false"/>
    <arg name="ground_truth" value="true"/>
    <arg name="x_pos"        value="-5"/>
    <arg name="y_pos"        value="5"/>
  </include>

  <include file="$(find perch_experiment)/launch/individual_scarab.launch">
    <arg name="agent"        value="scarab44"/>
    <arg name="rviz"         value="false"/>
    <arg name="ground_truth" value="false"/>
    <arg name="x_pos"        value="0"/>
    <arg name="y_pos"        value="0"/>
  </include>

</launch>

